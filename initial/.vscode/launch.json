    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "fgldb-dap",
            "request": "attach",
            "name": "(4gl) Attach",
            "processId": "${command:pickProcess}"
        },
        {
            "type": "fgldb-dap",
            "request": "launch",
            "name": "(4gl) Launch",
            "program": "${workspaceFolder}/${fileBasenameNoExtension}",
            "args": [],
            "environment": [
                {"name": "FGLRESOURCEPATH", "value": "../etc"},
                {"name": "DBNAME", "value": "../etc/training.db"}
            ],
            "externalConsole": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}